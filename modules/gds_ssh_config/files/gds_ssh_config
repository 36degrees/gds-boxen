# CI
# --
Host *.ci-govuk
  ProxyCommand ssh %r@ci-new.alphagov.co.uk -W $(echo %h | sed 's/\.ci-govuk$//'):%p


# Preview
# -------
Host jumpbox-1.management.preview
  Hostname jumpbox.preview.alphagov.co.uk

Host jumpbox-2.management.preview
  Hostname jumpbox.preview.alphagov.co.uk
  Port     1022

Host *.preview
  ProxyCommand ssh %r@jumpbox.preview.alphagov.co.uk -W $(echo %h | sed 's/\.preview$//'):%p


